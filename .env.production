# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration - Update with your Neon.tech URL
DATABASE_URL=postgresql://username:password@host:port/database

# Session Configuration - Use a secure secret in production
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# Blockchain Configuration
BLOCKCHAIN_NETWORK=polygon
POLYGON_RPC_URL=https://polygon-rpc.com/
CONTRACT_ADDRESS=0x742d35Cc3d5d1212CF2345235a23F12FA1213AB8
PRIVATE_KEY=your_wallet_private_key_here

# Firebase Configuration (Optional)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# OCR Configuration
OCR_CONFIDENCE_THRESHOLD=0.7

# Carbon Credit Configuration
CARBON_CREDIT_RATE=0.105
REWARD_MULTIPLIER=2.0

# Image Storage Configuration
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Production Settings
DEMO_MODE=false
DEMO_VEHICLE_NUMBER=DEMO4774
